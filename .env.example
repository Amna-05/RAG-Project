# Application Settings
APP_NAME=RAG System
DEBUG=false

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/rag_db

# JWT Settings
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Pinecone Settings
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=rag-index

# Google Gemini Settings
GOOGLE_API_KEY=your-google-api-key

# ============ Rate Limiting Settings ============
# Redis URL for distributed rate limit storage (optional in dev - uses in-memory fallback)
REDIS_URL=redis://localhost:6379/0

# Rate limit storage backend: "redis" (production) or "memory" (development)
RATE_LIMIT_STORAGE=memory

# Chat endpoint: requests per minute per user
RATE_LIMIT_CHAT_REQUESTS=10
RATE_LIMIT_CHAT_WINDOW_MINUTES=1

# Upload endpoint: uploads per window per user
RATE_LIMIT_UPLOAD_REQUESTS=2
RATE_LIMIT_UPLOAD_WINDOW_MINUTES=10

# Auth endpoints: attempts per minute per IP
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW_MINUTES=1

# Enable/disable rate limiting globally
RATE_LIMIT_ENABLED=true

# ============ Email Settings (Resend) ============
RESEND_API_KEY=re_your_resend_api_key
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=RAG App

# ============ Frontend URL (for password reset links) ============
FRONTEND_URL=http://localhost:3000

# ============ Logging Settings ============
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============ OpenAI Fallback (Optional) ============
OPENAI_API_KEY=your-openai-api-key
