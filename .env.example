
# ============ Application ============
APP_NAME=rag-project
APP_VERSION=1.0.0
DEBUG=false
API_PREFIX=/api/v1

# ============ Database ============
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/rag_db

# ============ JWT Security ============
# IMPORTANT: Generate new secrets for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-change-this-too
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ CORS ============
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============ Pinecone ============
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=rag-multi-user-index
PINECONE_USE_NAMESPACES=true

# ============ Google Gemini ============
GOOGLE_API_KEY=your_google_api_key
GEMINI_MODEL=gemini-2.0-flash

# ============ Embedding ============
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============ Document Processing ============
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=10
ENABLE_OCR=false

# ============ Search ============
DEFAULT_TOP_K=5
MIN_RELEVANCE_SCORE=0.5
ENABLE_HYBRID_SEARCH=false